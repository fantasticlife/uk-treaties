<%= content_tag( 'h1', @agreement.title ) %>

<%= content_tag( 'p', "Subject: #{link_to( @agreement.subject.subject, subject_show_url( :subject => @agreement.subject ) )}".html_safe ) %>

<% unless @agreement.actions.empty? -%>
	<%= content_tag( 'h2', 'Actions' ) %>
	<table>
		<thead>
			<tr>
				<%= content_tag( 'th', 'Party' ) %>
				<%= content_tag( 'th', 'Action type' ) %>
				<%= content_tag( 'th', 'Action on' ) %>
				<%= content_tag( 'th', 'Effective on' ) %>
			</tr>
		</thead>
		<tbody>
			<%= render :partial => 'action/action_from_agreement', :collection => @agreement.actions %>
		</tbody>
	</table>
<% end -%>